<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="rotanaRegPU"
        transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.rotanareg.skolan.course.Course</class>
        <class>com.rotanareg.skolan.course.Student</class>
        <class>com.rotanareg.skolan.course.Teacher</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/rotanaRegPU"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <!--TODO OBS! Behöver man detta?-->
            <property name="javax.persistence.sql-load-script-source"
                      value="META-INF/sql/data.sql" />
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>

    <!--TODO vilka som skall mappas? och är detta rätt-->

    <persistence-unit name="rotanaRegSkolanPU"
    transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.rotanareg.skolan.course.Course</class>
        <class>com.rotanareg.skolan.course.Teacher</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/rotanaRegSkolanPU"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>


        </properties>
    </persistence-unit>
</persistence>
